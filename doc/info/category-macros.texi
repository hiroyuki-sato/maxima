@macro opencatbox {}
@ifhtml
@html
<div class=categorybox>
@end html
@end ifhtml
@end macro

@macro category {name}
@ifhtml
@html
&middot;
@end html
@ref{Category: \name\}
@end ifhtml
@end macro

