@ifhtml
@html
</div>
@end html
@end ifhtml
@end macro

@c Macros for cross references

@ifhtml
@macro mref {nodename}
@code{@ref{\nodename\}}
@end macro
@end ifhtml
@ifnothtml
@macro mref {nodename}
@code{\nodename\}
@end macro
@end ifnothtml

@ifhtml
@macro mxref {nodename, text}
@code{@ref{\nodename\, \text\}}
@end macro
@end ifhtml
@ifnothtml
@macro mxref {nodename, text}
@code{\text\}
@end macro
@end ifnothtml

@ifhtml
@macro mrefdot {nodename}
@code{@ref{\nodename\}}.
@end macro
@end ifhtml
@ifnothtml
@macro mrefdot {nodename}
@code{\nodename\}.
@end macro
@end ifnothtml

@macro mxrefdot {nodename, text}
@ifhtml
@code{@ref{\nodename\, \text\}}.
@end ifhtml
@ifnothtml
@code{\text\}.
@end ifnothtml
@end macro

@ifhtml
@macro mrefcomma {nodename}
@code{@ref{\nodename\}},
@end macro
@end ifhtml
@ifnothtml
@macro mrefcomma {nodename}
@code{\nodename\},
@end macro
@end ifnothtml

@ifhtml
@macro mxrefcomma {nodename, text}
@code{@ref{\nodename\, \text\}},
@end macro
@end ifhtml
@ifnothtml
@macro mxrefcomma {nodename, text}
@code{\text\},
@end macro
@end ifnothtml

@ifhtml
@macro mrefparen {nodename}
@code{@ref{\nodename\}})
@end macro
@end ifhtml
@ifnothtml
@macro mrefparen {nodename}
